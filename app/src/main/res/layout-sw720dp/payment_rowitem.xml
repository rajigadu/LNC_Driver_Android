<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/rowitem_root"
        android:layout_margin="@dimen/margin_05"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/off_white"
        android:clickable="true"
        android:elevation="@dimen/margin_15"
        app:cardCornerRadius="@dimen/margin_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:background="@color/off_white">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_light"
                android:layout_margin="@dimen/margin_05"
                android:text="date"
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_05"
                android:layout_below="@+id/date"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/pidtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@+id/ride"
                android:layout_marginLeft="@dimen/margin_05"
                android:layout_marginTop="@dimen/margin_05"
                android:text="payment id : "
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navigationBarColorAttempted"
                android:layout_marginLeft="@dimen/margin_05"
                android:layout_below="@+id/pidtitle"
                android:text=""
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_05"
                android:layout_below="@+id/pid"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin_05"
                android:layout_below="@+id/amount"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_mediumsize"/>

            <TextView
                android:id="@+id/ptype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_05"
                android:layout_below="@+id/tip"
                android:text="partner"
                android:textSize="@dimen/text_mediumsize"/>

            <ImageView
                android:id="@+id/pinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/info1"/>

            <LinearLayout
                android:id="@+id/payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride"
                android:weightSum="2"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amounttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@+id/pidtitle"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_05"
                        android:layout_marginRight="@dimen/margin_05"
                        android:text="Amount : "
                        android:textSize="@dimen/text_largesize"/>

                    <TextView
                        android:id="@+id/pidtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/margin_05"
                        android:text="payment id : "
                        android:textSize="@dimen/text_largesize"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_below="@+id/pidtitle"
                        android:layout_marginLeft="@dimen/margin_05"
                        android:layout_marginRight="@dimen/margin_05"
                        android:text="876786"
                        android:textSize="@dimen/text_largesize"/>

                    <TextView
                        android:id="@+id/pid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/navigationBarColorAttempted"
                        android:layout_margin="@dimen/margin_05"
                        android:text="87687568756875"
                        android:textSize="@dimen/text_smallsize"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>


