<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowitem_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_05"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:padding="@dimen/margin_05">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_05"
        android:layout_marginRight="@dimen/margin_05"
        android:backgroundTint="@color/off_white"
        android:elevation="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/off_white">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_smallsize" />







            <TextView
                android:id="@+id/ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/date"
                android:layout_marginRight="@dimen/margin_10"
                android:text=""
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_notes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ride"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_05"
                android:text="Notes :"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride"
                android:layout_marginTop="@dimen/margin_05"
                android:layout_toRightOf="@+id/tv_notes_title"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_notes_title"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_05"
                android:text="Distance :"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_notes_title"
                android:layout_marginTop="@dimen/margin_05"
                android:layout_toRightOf="@+id/dtitle"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />





            <TextView
                android:id="@+id/estimeted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_smallsize"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/dtitle"
                android:layout_marginTop="@dimen/margin_05"/>

            <TextView
                android:id="@+id/estimeted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_smallsize"
                android:layout_below="@+id/estimeted_time"/>




            <LinearLayout
                android:id="@+id/layout112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/estimeted_date"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:weightSum="2">

                    <Button
                        android:id="@+id/stops"
                        style="@style/MaterialAnimations.Buttonred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_05"
                        android:layout_weight="0.6"
                        android:text="Stops"
                        android:textColor="@color/white_full"
                        android:visibility="gone" />

                    <Button
                    android:id="@+id/viewdetails"
                    style="@style/MaterialAnimations.Buttonorange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ride"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_05"
                    android:layout_weight="1.4"
                    android:text="VIEW RIDE DETAILS"
                    android:textColor="@color/white_full"
                    android:visibility="visible" />



                    <Button
                        android:id="@+id/viewPartner"
                        style="@style/MaterialAnimations.Buttonorange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ride"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_05"
                        android:layout_weight="1.0"
                        android:text="Change Role"
                        android:textColor="@color/white_full"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout134"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/viewgotouser"
                        style="@style/MaterialAnimations.Buttonorange"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ride"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_05"
                        android:layout_weight="1.4"
                        android:text="Go to User"
                        android:textColor="@color/white_full"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/viewgotodestination"
                        style="@style/MaterialAnimations.Buttonorange"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ride"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_05"
                        android:layout_weight="1.4"
                        android:text="Go to Destination"
                        android:textColor="@color/white_full"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
