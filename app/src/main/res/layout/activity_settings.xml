<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Navigation"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" >

            <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:backgroundTint="#33ffffff"
            android:layout_marginTop="@dimen/margin_10"
            android:elevation="@dimen/margin_10"
            app:cardCornerRadius="@dimen/margin_05">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15">

                <TextView
                    android:id="@+id/vtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_mediumsize"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Current version : "/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vtitle"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textSize="@dimen/text_mediumsize"
                    android:textColor="@color/black"
                    android:text=""/>

                <TextView
                    android:id="@+id/editpinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_below="@+id/version"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Edit Personal Info"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/editpinfo"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/editvinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_below="@+id/line1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Edit Vehicle Info"/>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/editvinfo"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/addbank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_below="@+id/line2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Add Bank Account"/>

                <View
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/addbank"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/changepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line8"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Change Password"/>
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/changepassword"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/contactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line4"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Contact Us"/>

                <View
                    android:id="@+id/line22"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/contactus"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/privacypolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line22"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textSize="@dimen/text_mediumsize"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Privacy Policy"/>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/privacypolicy"
                    android:background="@color/colorPrimary">
                </View>

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line5"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:textSize="@dimen/text_mediumsize"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/rightcolor"
                    android:text="Terms &amp; Conditions"/>

                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/terms"
                    android:background="@color/colorPrimary">
                </View>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
