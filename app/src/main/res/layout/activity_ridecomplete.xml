<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/topbar"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/logo1" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_logo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:backgroundTint="#33ffffff"
                android:elevation="@dimen/margin_10"
                app:cardCornerRadius="@dimen/margin_05">

                <RelativeLayout
                    android:id="@+id/main_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/ridecost_basic_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Basic Ride Cost : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ridecost_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/ridecost_basic_title"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/wcharges_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ridecost_basic_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Waiting Charges : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/waiting_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ridecost_basic_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/wcharges_title"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/totalcharges_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_waiting_time_charges"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Total Payout : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/total_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_waiting_time_charges"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/totalcharges_title"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_title_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/totalcharges_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Ride Fare : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_ride_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/totalcharges_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_title_fare"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/tv_title_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_waiting_time_charges"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Earnings : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_waiting_time_charges"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_title_earnings"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_new_title_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wcharges_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Ride Fare : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_new_ride_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wcharges_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_title_fare"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize" />


                    <TextView
                        android:id="@+id/tv_new_admin_fare_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_new_title_fare"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Admin Fare : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_new_admin_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_new_title_fare"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_new_admin_fare_title"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize" />




                    <TextView
                        android:id="@+id/tv_unplanned_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_new_admin_fare_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Unplanned Stops : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_total_unplanned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_new_admin_fare_title"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_unplanned_view"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_waiting_time_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_total_unplanned"
                        android:layout_marginTop="@dimen/margin_05"
                        android:padding="@dimen/margin_05"
                        android:text="Waiting Time : "
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_mediumsize" />

                    <TextView
                        android:id="@+id/tv_total_waiting_time_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_unplanned_view"
                        android:layout_marginTop="@dimen/margin_05"
                        android:layout_toRightOf="@+id/tv_waiting_time_charges"
                        android:padding="@dimen/margin_05"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_mediumsize" />

                    <Button
                        android:id="@+id/complete"
                        style="@style/MaterialAnimations.Buttonblack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_earnings"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:padding="@dimen/padding_10"
                        android:text="Complete Ride "
                        android:textAllCaps="true"
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_largesize" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
