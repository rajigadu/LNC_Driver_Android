<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/label_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup : "
            android:paddingVertical="5dp"
            android:textColor="@color/sky_blue_pressed"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/label_date_and_time"
            app:layout_constraintTop_toBottomOf="@+id/label_date_and_time" />

        <TextView
            android:id="@+id/value_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tirur Railway Station, Kerala, India"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/label_pickup"
            app:layout_constraintStart_toEndOf="@+id/label_pickup"
            app:layout_constraintTop_toTopOf="@+id/label_pickup" />

        <TextView
            android:id="@+id/value_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/label_notes"
            app:layout_constraintStart_toEndOf="@+id/label_notes"
            app:layout_constraintTop_toTopOf="@+id/label_notes"
            tools:text="Are you available for pickup" />

        <TextView
            android:id="@+id/value_date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/label_date_and_time"
            app:layout_constraintStart_toEndOf="@+id/label_date_and_time"
            app:layout_constraintTop_toTopOf="@+id/label_date_and_time"
            tools:text="2023-01-24 10:55 AM" />

        <TextView
            android:id="@+id/label_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes : "
            android:paddingVertical="5dp"
            android:textColor="@color/sky_blue_pressed"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/label_pickup"
            app:layout_constraintTop_toBottomOf="@+id/label_pickup" />

        <TextView
            android:id="@+id/label_date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date/Time : "
            android:textColor="@color/sky_blue_pressed"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>