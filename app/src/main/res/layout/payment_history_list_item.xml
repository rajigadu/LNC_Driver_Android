                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting Time : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_unplanned_waiting_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_waiting_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_ride_cost"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting Time Amount : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_waiting_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
