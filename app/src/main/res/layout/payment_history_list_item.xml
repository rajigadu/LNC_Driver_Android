                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_tip_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_city_charges"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_tip_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_driver_tip_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tip_amt"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tip Amount :"
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_driver_tip_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_driver_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tip_amt"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_driver_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Earnings : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_driver_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_partner_tip_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_driver_tip_amt"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Driver Gross : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_partner_tip_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_driver_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_partner_tip_amt"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Type : "
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_driver_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>

            <ImageView
                android:id="@+id/pinfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_10"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/info1" />

