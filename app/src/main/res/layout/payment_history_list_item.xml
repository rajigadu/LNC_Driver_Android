<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/rowitem_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_05"
        android:backgroundTint="@color/off_white"
        android:clickable="true"
        android:elevation="@dimen/margin_15"
        app:cardCornerRadius="@dimen/margin_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/off_white"
            android:orientation="vertical"
            android:padding="@dimen/padding_05">

            <LinearLayout
                android:id="@+id/ll_Date_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date | Time : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_Date_Time"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_ride_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_Date_Time"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Id : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_ride_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_summery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_Date_Time"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_ride_summery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text="Summery"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mediumsize"
                    android:textStyle="bold"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_ride_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tip_amt"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_ride_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Fare : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_ride_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
                    android:text=""
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_admin_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_customer_name"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Fee : "
                    android:textColor="#2FA46B"
                    android:textSize="@dimen/text_mediumsize" />

                <TextView
                    android:id="@+id/tv_admin_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_05"
