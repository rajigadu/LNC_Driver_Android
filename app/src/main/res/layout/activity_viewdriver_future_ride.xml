<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/topbar"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/card_user"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_05"
            android:layout_marginRight="@dimen/margin_10"
            android:text="Timer"
            android:textColor="@color/red"
            android:textSize="@dimen/text_mediumsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_info_ride_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_10"
            android:text="Waiting was start"
            android:textColor="@color/white1"
            android:textSize="@dimen/text_smallsize" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/color_bg"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_bg">

            <TextView
                android:id="@+id/utitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:text="Customer Details :"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_mediumsize"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/utitle43244"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/utitle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:text="Date/Time : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_mediumsize"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usercall"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:src="@drawable/chat"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/newchatmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_but"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="new"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userimage"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_below="@+id/utitle43244"
                android:layout_margin="@dimen/margin_10"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/userimage"
                android:layout_below="@+id/utitle43244"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_toRightOf="@+id/userimage"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_mediumsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uname"
                android:layout_toRightOf="@+id/userimage"
                android:text=""
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_mediumsize" />



            <TextView
                android:id="@+id/trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unumber"
                android:layout_toRightOf="@+id/userimage"
                android:text=""
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_mediumsize" />


            <TextView
                android:id="@+id/tv_planned_stops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trans"
                android:layout_toRightOf="@+id/userimage"
                android:text="Planned Stops : 0"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_mediumsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rideaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_planned_stops"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:text="Elente Mall TO iVY HOSPITAL"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_smallsize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/gotouser"
                style="@style/MaterialAnimations.Buttonblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rideaddress"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@android:color/transparent"
                android:text="GO TO USER"
                android:textAllCaps="false"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_smallsize"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/unavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rideaddress"
                android:layout_margin="@dimen/margin_10"
                android:layout_toRightOf="@+id/gotouser"
                android:src="@drawable/navigation"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnGoToDestination"
                style="@style/MaterialAnimations.Buttonblack"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/unavigation"

                android:layout_marginLeft="15dp"
                android:background="#4C8900"
                android:text="   GO TO DESTINATION   "
                android:textAllCaps="false"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_smallsize"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dnavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unavigation"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/btnGoToDestination"
                android:src="@drawable/navigation"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/p_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnGoToDestination"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/partner"
                    style="@style/MaterialAnimations.Buttonorange"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:background="#2694C5"
                    android:text="PARTNER"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_smallsize" />

                <ImageView
                    android:id="@+id/msgd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:src="@drawable/chat"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_partner_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:src="@drawable/usercall"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_buttons"
                android:orientation="vertical">

                <Button
                    android:id="@+id/complete"
                    style="@style/MaterialAnimations.Buttonblack"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_10"

                    android:text="@string/start_ride"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_smallsize" />


                <TextView
                    android:id="@+id/ride_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:text="Your ride has been started."
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_mediumsize"
                    android:textStyle="bold"
                    android:visibility="gone"/>



                <!-- <ImageView
                     android:id="@+id/dnavigation"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_margin="@dimen/margin_10"
                     android:src="@drawable/navigation"
                     android:visibility="visible" />-->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_stops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_complete"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_waiting_time"
                    style="@style/MaterialAnimations.Buttonorange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_bottom_view"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="1"
                    android:text="Waiting Time"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_mediumsize" />

                <Button
                    android:id="@+id/btn_additional_stops"
                    style="@style/MaterialAnimations.Buttonred"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_bottom_view"
                    android:layout_weight="1"
                    android:text="@string/additional_stops"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_mediumsize" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_bottom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_stops"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel"
                    style="@style/MaterialAnimations.Buttonred"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:text="Cancel Ride"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_mediumsize"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/waitingcharge"
                    style="@style/MaterialAnimations.Buttonorange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_10"
                    android:text="@string/waiting_charges"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_mediumsize"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>