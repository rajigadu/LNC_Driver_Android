<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clickable="true"
    tools:context=".activity.Login">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include
            android:id="@+id/topbar"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo1"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_1"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_10"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/drivetypetitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:text="BEHAVE LIKE :"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_largesize" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drivetypetitle"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:backgroundTint="#33ffffff"
                    android:elevation="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_05">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10">

                        <RadioGroup
                            android:id="@+id/agroups"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_marginRight="@dimen/margin_20"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:checked="true"
                                android:drawablePadding="10dp"
                                android:text="Drive client with known partner"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_mediumsize" />

                            <RelativeLayout
                                android:id="@+id/rl_partner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/agroups"
                                android:layout_marginTop="@dimen/margin_10"
                                android:background="@color/black_light"
                                android:padding="@dimen/margin_10"
                                android:visibility="visible">

                                <EditText
                                    android:id="@+id/et_partner_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@color/off_white"
                                    android:clickable="false"
                                    android:drawablePadding="@dimen/padding_10"
                                    android:drawableRight="@drawable/down"
                                    android:focusableInTouchMode="false"
                                    android:hint="Add Partner"
                                    android:inputType="none"
                                    android:padding="@dimen/padding_05"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black_light"
                                    android:textSize="@dimen/text_mediumsize" />


                                <EditText
                                    android:id="@+id/pname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_partner_list"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@color/off_white"
                                    android:hint="Partner Name"
                                    android:inputType="none"
                                    android:padding="@dimen/padding_05"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black_light"
                                    android:textSize="@dimen/text_mediumsize"
                                    android:singleLine="true"/>

                                <EditText
                                    android:id="@+id/pemail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pname"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@color/off_white"
                                    android:hint="Partner Email"
                                    android:inputType="textEmailAddress"
                                    android:padding="@dimen/padding_05"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black_light"
                                    android:textSize="@dimen/text_mediumsize" />

                                <EditText
                                    android:id="@+id/pmobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pemail"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@color/off_white"
                                    android:hint="Partner Mobile Number"
                                    android:inputType="number"
                                    android:padding="@dimen/padding_05"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black_light"
                                    android:textSize="@dimen/text_mediumsize"
                                    android:maxLength="13"/>

                                <CheckBox
                                    android:id="@+id/cb_default_driver"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pmobile"
                                    android:drawablePadding="10dp"
                                    android:text="@string/default_driver_for_today"
                                    android:textColor="@color/white1"
                                    android:textSize="@dimen/text_mediumsize" />
                            </RelativeLayout>

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:drawablePadding="10dp"
                                android:text="Drive client without partner"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_mediumsize" />
                        </RadioGroup>

                        <Button
                            android:id="@+id/submit"
                            style="@style/MaterialAnimations.Buttonblack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/agroups"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="@dimen/margin_20"
                            android:paddingBottom="@dimen/margin_10"
                            android:paddingTop="@dimen/margin_10"
                            android:text="SUBMIT"
                            android:textColor="@color/white_full"
                            android:textSize="@dimen/text_largesize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>



